/* pages/month/month.wxss */

page {
  background: rgba(56, 154, 199, 0.671);
  opacity: 0.9;
}

.bgImg{
  position: fixed;
  z-index: -3;
  opacity: 0.8;
  width: 100%;
  height: 100%;
}
.img{
  width: 100%;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 0;
}

.header {
  width: 100%;
}

.header-btn-bg {
  background: rgba(173, 164, 164, 0.644);
  z-index: -1;
  opacity: 0.8;
  padding: 25rpx 0;
}

.header-button {
  width: 90%;
  margin-left: 5%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 32rpx;
  color: white;
  height: 80rpx;
  line-height: 80rpx;
  background: rgba(173, 164, 164, 0.788);
  box-shadow: inset 4rpx 4rpx 3rpx rgba(41, 38, 38, 0.829);
  padding: 5rpx 0;
  opacity: 1;
}

.btn {
  margin-left: 8%;
  width: 30%;
  text-align: center;
  height: 80%;
  margin-top: 6rpx;
  background: rgba(37, 99, 170, 0.288);
  border-radius: 20rpx;
  box-shadow: 6rpx 6rpx 6rpx rgba(37, 99, 170, 0.726);
}

.btn text {
  font-size: 36rpx;
  line-height: 80%;
}

.header-button image {
  width: 66rpx;
  height: 66rpx;
  background: rgba(37, 99, 170, 0.288);
  border-radius: 50%;
  margin: 8rpx 20rpx;
  box-shadow: 6rpx 6rpx 6rpx rgba(37, 99, 170, 0.678);
}

.border-radius {
  border-radius: 50%;
  width: 66rpx;
  height: 66rpx;
}

.hover {
  transform: scale(1.05);
  background: rgba(37, 99, 170, 0.781);
}
.header-msg{
  padding: 30rpx 0;
  font-size: 38rpx;
  color: rgb(95, 90, 90);
  margin-left:30rpx; 
}

/* 数据部分 */
.content-list{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  /* height: 500rpx; */
  padding: 20rpx 0;
  font-size: 36rpx;
  background: rgba(95, 76, 76, 0.438);
  z-index: -1;
  opacity: 0.9;
}

.leftData{
  width: 49.5%;
  /* height: 500rpx; */
  /* border: 1rpx solid black; */
  box-shadow: inset 10rpx 12rpx 8rpx rgba(124, 91, 91, 0.973);
}

.middle-line{
  width: 1%;
  background: rgba(124, 91, 91, 0.973);
}
.rightData{
  width: 49.5%;
  /* height: 500rpx; */
  /* border: 1rpx solid black; */
  box-shadow: inset 10rpx 12rpx 8rpx rgba(124, 91, 91, 0.973);
}
.left-list{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 15rpx;
  border-top: 2rpx solid rgba(124, 111, 111, 0.39);
  border-bottom: 2rpx solid rgba(124, 91, 91, 0.973);
}