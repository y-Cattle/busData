
.msgContainer{
  display: flex;
  flex-direction: column;
  width:95%;
  box-shadow: 10rpx 12rpx 6rpx rgb(65, 62, 62);
  color: #fff;
  background: rgba(0, 0, 0, .6);
  z-index: -1;
  padding:10rpx 0;
  border: 2rpx solid rgb(65, 62, 62);
  overflow: hidden;
}

.avatar_data{
  width:100%;
}

.avatar_data image{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 6rpx;
}

.avatar_data text{
  font-size: 20rpx;
  font-weight: bold;
  width: 45%;
}

.text{
  font-size: 22rpx;
  font-weight: 700;
  margin: 0rpx 50rpx;
  width:90%;
}

.contentImg{
  width: 100%;
  height: 150rpx;
  border-bottom: 6rpx solid #696969;
  border-top: 6rpx solid #696969;
}

.clickImg{
  width: 90rpx;
  height: 90rpx;
  margin-left: 32%;
  margin-top: -38%;
}

.btnBg{
  margin:20rpx 0;
  width:90%;
  position: relative;
}
.btnContainer{
  width: 100%;
}

.btnContainer button{
  display: inline-block;
  font-size: 22rpx;
  color: grey;
  font-weight: bold;
  width: 80%;
  height: 40rpx;
  line-height: 40rpx;
  position: absolute;
  left: 13%;
  margin-top: -15%;
}

.next{
  width:30rpx;
  height: 30rpx;
  position: absolute;
  left: 83%;
  margin-top: -13%;
}


