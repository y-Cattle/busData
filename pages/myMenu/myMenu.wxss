/* pages/myMenu/myMenu.wxss */

.myMenuBox{
  display: flex;
  flex-direction: column;
}

.container{
  width: 100%;
  height: 450rpx;
  position: relative;
}

.bgImg{
  width: 100%;
  height: 450rpx;
  position:absolute;
  top:0;
}

.headPic{
  position: absolute;
  left: 50%;
  margin-left: -100rpx;
  top: 50%;
  margin-top: -150rpx;
  width:200rpx;
  height: 200rpx;
  border:3rpx solid black;
  border-radius: 50%;
}

.userName{
  text-align: center;
  width: 200rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
  position: absolute;
  left: 50%;
  margin-left: -100rpx;
  bottom: 50rpx;
} 

.cutLine{
  border: 5rpx solid #DCDCDC;
}

.myBtn{
  width: 100%;
  height: 70rpx;
  border: 1rpx solid black;
  line-height: 70rpx;
  text-align: center;
  background: rgba(0, 0, 0, .2);
  margin-top: 5rpx;
  /* border-radius: 20rpx; */
  box-shadow: 0 4rpx 6rpx 5px rgba(204, 199, 199, 0.16)


}

.leftImg{
  width: 50rpx;
  height: 50rpx;
  margin-left: 50rpx;
  margin-top: 20rpx;
  float: left;
}

.textCon{
  font-size: 32rpx;
  letter-spacing: 6rpx;
  font-weight: bold;
  color:#696969;
}

.rightGoImg{
  width: 30rpx;
  height: 30rpx;
  margin-top: 20rpx;
  float: right;
  margin-right: 50rpx;
}

.hover{
  background: #eee;
}