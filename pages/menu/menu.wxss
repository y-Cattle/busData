/* pages/menu/menu.wxss */
@import '/pages/template/timeBtn.wxss';

page {
  -webkit-font-smoothing: antialiased;
  font-family: "PingHei", "Helvetica Neue", "Helvetica", "Arial", "Verdana", "sans-serif";
  height: 100%;
  background-color: #f5f4f6;
}

.bgMenu {
  width: 100%;
  height: 100%;
  z-index: -10;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  opacity: 0.5;
}

.container {
  width: 100%;
  height: 80%;
  padding: 0 0;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 用户信息 */

.userInfo {
  display: flex;
  flex-direction: row;
  width: 90%;
  height: 75rpx;
  justify-content: baseline;
  background: #8888886c;
  background: rgba(241, 239, 239, 0.63);
  /* border-radius: 20rpx; */
  box-shadow: 12rpx 12rpx 10rpx rgb(65, 62, 62);
  /* box-shadow: -12rpx -12rpx 10rpx rgb(65, 62, 62); */
  padding-bottom: 15rpx;
}

.line {
  width: 20rpx;
  height: 60rpx;
  background: rgba(3, 189, 3, 0.904);
  margin: 0 20rpx;
}

.userInfo .text1 {
  line-height: 75rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
  margin: 0 10rpx;
  text-shadow: 0 1px 0 #ccc,
                 0 1px 3px rgba(0, 0, 0, 0.3),
                 0 3px 5px rgba(0, 0, 0, 0.2),
                 0 5px 10px rgba(0, 0, 0, 0.25),
                 0 10px 10px rgba(0, 0, 0, 0.2),
                 0 20px 20px rgba(0, 0, 0, 0.15);
}

.text1.text2 {
  line-height: 75rpx;
  color: azure;
  font-size: 42rpx;
}

.avatar {
  width: 66rpx;
  height: 66rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}

/* 跳转菜单 */

.navMenu {
  position: absolute;
  top: 130rpx;
  width: 90%;
  height: 180rpx;
  padding: 10rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background: rgba(241, 239, 239, 0.63);
  box-shadow: 9rpx 9rpx 9rpx rgb(65, 62, 62);
  /* border: 1rpx solid red; */
}

.nav {
  width: 140rpx;
  height: 150rpx;
  transform: scale(0.9);
}

.hover {
  transform: scale(1.1);
}

.navImg {
  width: 110rpx;
  height: 110rpx;
  box-shadow: 12rpx 12rpx 10rpx #444;
  border-radius: 20rpx;
}

.navText {
  font-size: 35rpx;
  color: #000;
  font-weight: 600;
}

/* 月信息 */

.info-type {
  position: absolute;
  top: 350rpx;
  width: 100%;
  background: rgba(241, 239, 239, 0.63);
  margin-top: 20rpx;
}

.info .info-type:first-child {
  margin-top: 0rpx;
}

/* 标题 */

.type-title {
  padding: 26rpx 0rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.type-title text:first-child {
  border-left: 6rpx solid #42bd56;
  padding-left: 26rpx;
}

.type-title text:last-child, .type-title navigator {
  color: #42bd56;
  float: right;
  font-weight: normal;
  padding-right: 16rpx;
}

/* 列表 */

.info-list {
  display: flex;
  white-space: nowrap;
  /* padding: 0rpx 12rpx;  *//* text-indent: 12rpx; */
}

.cut {
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  border-top: 3rpx solid black;
  border-bottom: 3rpx solid black;
}

.hover {
  transform: scale(1.05);
  background:rgba(223, 220, 220, 0.603);
}

.list {
  display: inline-block;
}

.content {
  display: inline-block;
  margin-left: 10rpx;
}
