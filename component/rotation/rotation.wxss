/* component/rotation/rotation.wxss */
.rotation{
  width:100%;
  height: 320rpx;
}
.slide-image{
  width:100%;
  height: 300rpx;
  border: 2rpx solid gray;
  transform: scale(0.6);
  transition: all 1s ease;
  box-shadow: 40rpx 40rpx rgba(0, 0, 0, 0.836);
  z-index: 2;
  border-radius: 20rpx;
}
.slide-image.img-active{
  transform: scale(1);
  z-index: 5;
}